    <!-- Enhanced JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // Initialize Google Tag Manager dataLayer
            window.dataLayer = window.dataLayer || [];
            
            // Listen for MailerLite form events
            window.addEventListener('message', function(event) {
                if (event.data && event.data.type === 'ml-form-success') {
                    // Push email capture event to dataLayer
                    window.dataLayer.push({
                        event: "user_email_capture",
                        email: event.data.email || 'captured_via_mailerlite',
                        page: window.location.pathname,
                        timestamp: new Date().toISOString()
                    });
                    
                    console.log('Email capture event fired via MailerLite');
                }
            });
            
            // Fallback: Listen for form submission
            document.addEventListener('submit', function(e) {
                var form = e.target;
                if (form.classList.contains('ml-block-form')) {
                    var emailInput = form.querySelector('input[name="fields[email]"]');
                    var nameInput = form.querySelector('input[name="fields[name]"]');
                    
                    if (emailInput && emailInput.value) {
                        window.dataLayer.push({
                            event: "user_email_capture",
                            email: emailInput.value,
                            first_name: nameInput ? nameInput.value : '',
                            page: window.location.pathname,
                            timestamp: new Date().toISOString()
                        });
                        
                        console.log('Email capture event fired (fallback method)');
                    }
                }
            });

            // Smooth scroll for any anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Add fade-in animation on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in-up');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.benefit-item, .form-container').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
